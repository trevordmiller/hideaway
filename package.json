{
  "name": "hideaway",
  "version": "0.5.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -k 'next renderer' 'NODE_ENV=development electron main' -p '{name}' -n 'next,electron' -c 'blue,green'",
    "verify": "yarn lint && yarn build",
    "lint": "eslint .",
    "build": "next build renderer",
    "release": "git checkout master && git pull && yarn build && yarn version && git push && git push --tags"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/display-name": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    },
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "concurrently": "^3.4.0",
    "electron": "^1.6.6",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3"
  },
  "dependencies": {
    "babili-webpack-plugin": "^0.0.11",
    "electron-config": "^1.0.0",
    "next": "^2.3.1",
    "nova-colors": "^2.1.5",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-numeric-input": "^2.0.7",
    "run-applescript": "^3.0.0"
  }
}
